{
    "name": "mash-all-vs-all",
    "version": "0.0.6",
    "shortDescription": "Pairwise sequence comparison via Mash",
    "longDescription": "Pairwise sequence comparison via Mash",
    "available": true,
    "checkpointable": false,
    "defaultMemoryPerNode": 32,
    "defaultProcessorsPerNode": 16,
    "defaultMaxRunTime": "12:00:00",
    "defaultNodeCount": 1,
    "defaultQueue": "normal",
    "deploymentPath": "kyclark/applications/mash-all-vs-all-0.0.6/stampede",
    "deploymentSystem": "data.iplantcollaborative.org",
    "executionSystem": "tacc-stampede2-kyclark",
    "executionType": "HPC",
    "helpURI": "http://genomebiology.biomedcentral.com/articles/10.1186/s13059-016-0997-x",
    "label": "Mash All-vs-All",
    "parallelism": "SERIAL",
    "templatePath": "template.sh",
    "testPath": "test.sh",
    "modules": [
        "load tacc-singularity"
    ],
    "tags": [
        "pairwise",
        "mash",
        "comparison",
        "imicrobe"
    ],
    "ontology": [
        "http://sswapmeet.sswap.info/agave/apps/Application"
    ],
    "inputs": [
        {
            "id": "QUERY",
            "value": {
                "default": "",
                "order": 0,
                "validator": "",
                "required": true,
                "visible": true,
                "enquote": false
            },
            "semantics": {
                "ontology": [
                    "http://sswapmeet.sswap.info/mime/application/X-bam"
                ],
                "minCardinality": 1,
                "maxCardinality": -1,
                "fileTypes": [
                    "raw-0"
                ]
            },
            "details": {
                "description": "",
                "label": "Directory/FAST(A|Q)(.gz) files to compare",
                "argument": "-q ",
                "repeatArgument": false,
                "showArgument": true
            }
        },
        {
            "id": "ALIAS_FILE",
            "value": {
                "default": "",
                "order": 0,
                "validator": "",
                "required": false,
                "visible": true,
                "enquote": false
            },
            "semantics": {
                "ontology": [
                    "xsd:string"
                ],
                "minCardinality": 1,
                "maxCardinality": 1,
                "fileTypes": []
            },
            "details": {
                "description": "Tab-delimited file containing name/alias columns",
                "label": "Alias file",
                "argument": "-a ",
                "repeatArgument": false,
                "showArgument": true
            }
        }
    ],
    "parameters": [
        {
            "id": "KMER_SIZE",
            "value": {
                "default": "21",
                "type": "string",
                "order": 1,
                "required": false,
                "visible": true,
                "enquote": false,
                "validator": ""
            },
            "details": {
                "description": "Hashes will be based on strings of this many nucleotides. Canonical nucleotides are used by default.",
                "label": "Kmer size",
                "argument": "-k ",
                "repeatArgument": false,
                "showArgument": true
            }
        },
        {
            "id": "SKETCH_SIZE",
            "value": {
                "default": "1000",
                "type": "string",
                "order": 2,
                "required": false,
                "visible": true,
                "enquote": false,
                "validator": ""
            },
            "details": {
                "description": "Each sketch will have at most this many non-redundant min-hashes.",
                "label": "Sketch size",
                "argument": "-s ",
                "repeatArgument": false,
                "showArgument": true
            }
        }
    ],
    "outputs": []
}
